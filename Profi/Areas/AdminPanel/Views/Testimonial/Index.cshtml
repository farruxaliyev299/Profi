@model TestimonialVM
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Testimonials</h4>
                <a class="btn btn-info" asp-action="Create">Create</a>
                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Speciality
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Rating
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var testimonial in Model.Testimonials)
                            {
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img src="~/assets/images/@testimonial.Url">
                                    </td>
                                    <td>
                                        @testimonial.Name
                                    </td>
                                    <td>
                                        @testimonial.Speciality
                                    </td>
                                    <td>
                                        @testimonial.Description
                                    </td>
                                    <td>
                                        @((double)testimonial.Rating/2) Stars
                                    </td>
                                    <td>
                                        <a class="btn btn-danger" asp-controller="Testimonial" asp-action="Delete" asp-route-id="@testimonial.Id">
                                            <i class="mdi mdi-delete"></i>
                                        </a>
                                        <a class="btn btn-warning" asp-controller="Testimonial" asp-action="Edit" asp-route-id="@testimonial.Id">
                                            <i class="mdi mdi-grease-pencil"></i>
                                        </a>
                                    </td>
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

