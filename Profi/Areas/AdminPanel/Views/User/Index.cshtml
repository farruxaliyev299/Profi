@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Users</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Users
                                </th>
                                <th>
                                    Activation
                                </th>
                                <th>
                                    Status
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        @user.UserName
                                    </td>
                                    <td>
                                        @if (user.IsActivated)
                                        {
                                            <a class="btn btn-danger" asp-action="Deactivate" asp-route-id="@user.UserName">Deactivate</a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-success" asp-action="Activate" asp-route-id="@user.UserName">Activate</a>
                                        }
                                    </td>
                                    <td>
                                        @if (user.IsActivated)
                                        {
                                            <span class="text-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">Deactive</span>
                                        }
                                    </td>
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

